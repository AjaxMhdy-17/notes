	<script>
		
	var targetArticles = document.getElementsByTagName('article')
	// console.log(targetArticles.length)
	// targetArticles.style.backgroundColor = 'red'
	for(let i = 0 ; i < targetArticles.length ; i++){
		targetArticles[i].style.backgroundColor = 'red'
		targetArticles[i].style.padding = "10px"
		targetArticles[i].style.marginBottom = "10px"

	}

	var targetAuthor = document.getElementsByClassName('author')

	console.log(targetAuthor.length)

	for(let i = 0 ; i < targetAuthor.length ; i++ ){
		targetAuthor[i].style.backgroundColor = 'lightgreen'
		targetAuthor[i].style.padding = '10px'
		targetAuthor[i].style.textTransform = 'uppercase'
	}


	var targetDesc = document.getElementsByClassName('description')

	for( let i = 0 ; i < targetDesc.length ; i++ ){
		targetDesc[i].style.color = '#222'
	}

	var targetFirstId = document.getElementById('first_id')
	targetFirstId.style.textAlign = 'center'

	</script>
